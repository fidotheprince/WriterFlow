


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">


<body id="form" class="cover-container text-center">
    <div class="cover-container d-flex w-100 h-50 p-3 mx-auto flex-column">
        <header class="masthead mb-auto"><!--nav bar--></header>
        <main role="main" class="inner cover">
            <h1 class="cover-heading">WritersFlow</h1>
            <p class="lead">
                WritersFlow is a tool to clear your writers block.
                Click below, recieve a prompt, and let your creative juices flow.
            </p>
            <!--Partial View here hide tags above with jQuery-->
            <div>
                @Html.Partial("ShowPrompt")
                <div id="test"></div>
            </div>
            <!--button-->
            <!--set up ajax so url doesn't redirect to partial view
                & you can dynamically see the change on home page

                In other words, I want to shoot an object from the ShowPrompt controller
                to the partial view without having to redirect the url

                on click point to url with ajax 
                -->
            <p class="lead">
                <a href="" class="btn btn-lg btn-primary" onclick="NewPrompt">Create</a>
            </p>
        </main>
    </div>
</body>

<script src="~/Scripts/umd/jquery-3.5.1.min.js"></script>
<script type ="text/javascript">
    function NewPrompt() {

        $.ajax({
            type: "GET",
            url: "Home/ShowPrompt",
            success: function () {
                $("#test").append("<div> will show if ajax is succesful</div>");
            }
        })

    };
</script>


<style>
    #form {
        margin-top: 275px;
    }
</style>
